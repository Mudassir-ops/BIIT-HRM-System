<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    android:background="@drawable/job_bg"
    android:elevation="@dimen/_10sdp"
    android:padding="@dimen/_10sdp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Degree"
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_name_value"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Mahzaib"
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toEndOf="@+id/tv_name"
        app:layout_constraintTop_toTopOf="@+id/tv_name" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginVertical="@dimen/_5sdp"
        android:text="Institute:"
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold"

        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_name" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_number_value"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Board"
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/tv_number"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@+id/tv_name_value"
        app:layout_constraintTop_toTopOf="@+id/tv_number" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_cnic"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginVertical="@dimen/_5sdp"
        android:text="Board:"
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold"

        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_number" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_apply_value_value"
        android:layout_width="wrap_content"
        android:layout_height="0dp"

        android:text="Mahzaib"
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/tv_apply_date"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@+id/tv_cnic_value"
        app:layout_constraintTop_toTopOf="@+id/tv_apply_date" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_apply_date"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginVertical="@dimen/_5sdp"
        android:text="Start Date:"
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_cnic" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_cnic_value"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Mahzaib"
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/tv_cnic"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@+id/tv_number_value"
        app:layout_constraintTop_toTopOf="@+id/tv_cnic" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_ednd_date"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginVertical="@dimen/_5sdp"
        android:text="End Date:"
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_apply_date" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_contact_value"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Mahzaib"
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/tv_ednd_date"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@+id/tv_apply_value_value"
        app:layout_constraintTop_toTopOf="@+id/tv_ednd_date" />


</androidx.constraintlayout.widget.ConstraintLayout>