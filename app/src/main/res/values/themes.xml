<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.BIITHRMSystem" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/base_color</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/base_color</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:textColorHint">@android:color/black</item>
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.BIITHRMSystem" parent="Base.Theme.BIITHRMSystem" />

    <style name="Style.App.circleImageView" parent="">
        <item name="shapeAppearance">@style/ShapeAppearanceOverlay.App.circleImageView</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_25sdp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.circleImageView_1" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_35sdp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.circleImageView_2" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_50sdp</item>
    </style>

    <style name="spinner_theme" parent="">
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>
</resources>